<div class="form-group row">
  <%= label_tag :first_name %>
  <%= text_field_tag :first_name, "", class: "form-control"  %>
</div>

<div class="form-group row">
  <%= label_tag :last_name%>
  <%= text_field_tag :last_name, "", class: "form-control"  %>
</div>

<div class="form-group row">
  <%= label_tag :credit_card_number, "Credit Card Number"%>
  <%= number_field_tag :credit_card_number, "", class: "form-control"  %>
</div>
<div class="form-group row">
  <%= label_tag :cvv, "CVV"%>
  <%= number_field_tag :cvv, "", class: "form-control"  %>
</div>
<div class="form-group row">
  <%= label_tag :expiry_date %>
  <%= date_select :expiry_date, "", class: "form-control", :start_year=>Date.today.year, :end_year=>Date.today.year + 15, order: [:month, :year]%>
</div>
