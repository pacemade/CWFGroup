<%= form_for ([@user, @trip]) do |f| %>
  <h2 class="form-group row">Book A Trip</h2>

  <%= render "#{@trip.current_step}_step", f: f %>

  <%= f.submit 'Back', :class => "btn btn-primary", :name => "back_button" unless @trip.first_step? %>

  <%= f.submit 'Continue', :class => "btn btn-primary", :name => "continue_button" %>

<% end %>
