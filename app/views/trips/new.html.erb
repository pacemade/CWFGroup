<h2>Book A Trip</h2>

<%= form_for ([@user, @trip]) do |f| %>

  <div class="form-group row">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, :class => "form-control" %>
  </div>

  <div class="form-group row">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, :class => "form-control" %>
  </div>

  <div class="form-group row">
    <%= f.label :birthday %>
    <%= f.date_select :birthday, :prompt => { :day => 'Day', :month => 'Month', :year => 'Year' }, :order => [:day, :month, :year], :class => "form-control" %>
  </div>

  <div class="form-group row">
    <%= f.label :start_date %>
    <%= f.date_select :start_date, :prompt => { :day => 'Day', :month => 'Month', :year => 'Year' }, :order => [:day, :month, :year], :class => "form-control" %>
  </div>

  <div class="form-group row">
    <%= f.label :end_date %>
    <%= f.date_select :end_date, :prompt => { :day => 'Day', :month => 'Month', :year => 'Year' }, :order => [:day, :month, :year], :class => "form-control" %>
  </div>


  <%= f.submit 'See options!', :class => "btn btn-primary", :id => "see_options" %>

<% end %>
