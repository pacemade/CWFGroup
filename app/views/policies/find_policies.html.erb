<h2>Policies</h2>

<ul class="list-group">
  <li class="list-group-item">Number of days travelling: <%= @days %> | Age: <%= @age %></li>
  <% @policies.each do |policy| %>
    <li class="list-group-item"><%= policy.company.name %></li>
    <li class="list-group-item">$<%= policy[@coverage].round(2) %> per day</li>
    <li class="list-group-item">$<%= (policy[@coverage]*@days).round(2) %> for <%= @days %> days</li>
    <li class="list-group-item"><%= radio_button_tag(:policy, [policy.id, policy[@coverage]]) %><%= label_tag(:policy, "Select" + " " + policy.company.name) %>
  <% end %>
</ul>


  <div class="form-group row">
    <%= label_tag :first_name %>
    <%= text_field_tag :first_name, "", class: "form-control"  %>
  </div>

  <div class="form-group row">
    <%= label_tag :last_name%>
    <%= text_field_tag :last_name, "", class: "form-control"  %>
  </div>

  <div class="form-group row">
    <%= label_tag :credit_card_number, "Credit Card Number"%>
    <%= number_field_tag :credit_card_number, "", class: "form-control"  %>
  </div>
  <div class="form-group row">
    <%= label_tag :cvv, "CVV"%>
    <%= number_field_tag :cvv, "", class: "form-control"  %>
  </div>
  <div class="form-group row">
    <%= label_tag :expiry_date %>
    <%= date_select :expiry_date, "", class: "form-control", :start_year=>Date.today.year, :end_year=>Date.today.year + 15, order: [:month, :year]%>
  </div>

  <input type="submit" value="Submit" form="new_trip" class="btn btn-primary form-group row">
